def tomcatServerUrl = "http://localhost:8181/manager/text" 

pipeline
{
  agent any
  stages 
  {
    //Use this code for inline pipeline script option
    stage('Code checkout')
   {
      steps
     {
        //download code from github
        git branch: 'main', url: 'https://github.com/swasa1329/Student-Jenkins-Tomcat.git'
      }
    }
    stage('Compile')
    {
      steps
      {
        // Run the maven build
         bat 'mvn compile' 
      }
    }
    stage('Test')
    {
      steps
      {
        // Run the maven build
         bat 'mvn test' 
      }
    }
    stage('Build')
    {
      steps
      {
        // Run the maven build
         bat 'mvn package' 
      }
    }
    
    stage('Deploy')
    {
      steps
      {
          //deploy war on tomcat server
          deploy adapters: [tomcat9(url: "${tomcatServerUrl}",
          credentialsId: 'fccf27d9-1e92-429c-9b11-9231eb07ffd2')], 
          war: 'target/*.war',
          contextPath: 'pipelineSCM-StudentApp-tomcat-Email'
      }
    }
  }
}
